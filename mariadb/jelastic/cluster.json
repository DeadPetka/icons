
{
    "jps": "https://raw.githubusercontent.com/sych74/mysql-cluster-1/master/addons/auto-clustering/auto-cluster.jps",
    "defaultState": false,
    "skipOnEnvInstall": true,
    "nodeGroupData": {
        "scalingMode": "STATELESS",
        "isRedeploySupport": false
    },
    "compatibleAddons": ["mysql-auto-cluster"],
    "settings": {
        "data": {
            "scheme": "slave"
        },
        "fields": [{
            "type": "list",
            "caption": "Scheme",
            "name": "scheme",
            "values": [{
                   "value": "master",
                   "caption": "Master-Master",
                   "tooltip": "<h3>Master-Master with Extra Slaves</h3> <img width='314' height='280' src='https://bit.ly/2RaIzvL'>"
               }, {
                   "value": "slave",
                   "caption": "Master-Slave",
                   "tooltip": "<h3>Master-Slave with Extra Slaves</h3> <img width='230' height='280' src='https://bit.ly/2NWBixr'>"
               }, {
                   "value": "galera",
                   "caption": "Galera",
                   "tooltip": "Galera cluster"
               }
           ]
        }]
    },
    "validation": {
        "scalingMode": "STATELESS",
        "rules": {
            "scheme": {
                "master": {
                    "minCount": 2
                },
                "slave": {
                    "minCount": 2
                },
                "galera": {
                    "minCount": 3
                }
            }
        }
    },
    "description": "Automatic clusterization of the databases based on the chosen scheme with pre-configured replication and auto-discovery of the nodes."
}
