{
    "jps": "https://raw.githubusercontent.com/sych74/mysql-cluster-1/master/addons/auto-clustering/auto-cluster.jps",
    "defaultState": false,
    "skipOnEnvInstall": true,
    "nodeGroupData": {
        "scalingMode": "STATELESS",
        "isRedeploySupport": false
    },
    "compatibleAddons": ["mysql-auto-cluster"],
    "settings": {
        "data": {
            "scheme": "slave"
        },
        "fields": [{
            "type": "list",
            "caption": "Scheme",
            "name": "scheme",
            "values": [{
                   "value": "master",
                   "caption": "Master-Master",
                   "tooltip": "<h3>Master-Master with Extra Slaves</h3> <img width='369' height='329' src='https://bit.ly/2RaIzvL'>"
               }, {
                   "value": "slave",
                   "caption": "Master-Slave",
                   "tooltip": "<h3>Master-Slave with Extra Slaves</h3> <img width='270' height='329' src='https://bit.ly/2R7DUKO'>"
               }, {
                   "value": "multi",
                   "caption": "Multi MGR",
                   "tooltip": "Multi Mysql Group Replication"
               }, {
                   "value": "single",
                   "caption": "Single MGR",
                   "tooltip": "Single Mysql Group Replication"
               }
           ]
        }]
    },
    "validation": {
        "scalingMode": "STATELESS",
        "rules": {
            "scheme": {
                "master": {
                    "minCount": 2
                },
                "slave": {
                    "minCount": 2
                },
                "single": {
                    "minCount": 3,
                    "maxCount": 11
                },
                "multi": {
                    "minCount": 3,
                    "maxCount": 11
                }
            }
        }
    },
    "description": "Automatic clusterization of the databases based on the chosen scheme with pre-configured replication and auto-discovery of the nodes. <a href=''>Learn More</a>"
}
